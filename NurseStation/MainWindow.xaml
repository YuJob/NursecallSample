<Window x:Class="NurseStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NurseStation"
        mc:Ignorable="d"
        Title="ナースステーション" Height="430" Width="700" Loaded="Window_Loaded" Closing="Window_Closing"  Background="White">
    <Grid IsEnabled="{Binding ConnectionAvaliable}">
        <Grid.Resources>
            <Style x:Key="common" TargetType="Control">
                <Setter Property="Background" Value="White"></Setter>
                <Setter Property="Foreground" Value="#dcdcdc"></Setter>
            </Style>
            <Style TargetType="Button" BasedOn="{StaticResource common}"  ></Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="button1" Content="101-1号室&#x0a;佐田侑衣菜" FontSize="30" Grid.Row="0" Grid.Column="0" PreviewMouseDown="button1_PreviewMouseDown" PreviewMouseUp="button1_PreviewMouseUp"></Button>
        <Button x:Name="button2" Content="101-2号室&#x0a;木村鈴子" FontSize="30" Grid.Row="0" Grid.Column="1" PreviewMouseDown="button2_PreviewMouseDown" PreviewMouseUp="button2_PreviewMouseUp"></Button>
        <Button x:Name="button3" Content="101-3号室&#x0a;医療花子" FontSize="30" Grid.Row="1" Grid.Column="0" PreviewMouseDown="button3_PreviewMouseDown" PreviewMouseUp="button3_PreviewMouseUp"></Button>
        <Button x:Name="button4" Content="101-4号室&#x0a;世田谷奈々" FontSize="30" Grid.Row="1" Grid.Column="1" PreviewMouseDown="button4_PreviewMouseDown" PreviewMouseUp="button4_PreviewMouseUp"></Button>
        <Button x:Name="button5" Content="102-1号室&#x0a;田中若菜" FontSize="30" Grid.Row="2" Grid.Column="0" PreviewMouseDown="button5_PreviewMouseDown" PreviewMouseUp="button5_PreviewMouseUp"></Button>
        <Button x:Name="button6" Content="102-2号室&#x0a;情報夢子" FontSize="30" Grid.Row="2" Grid.Column="1" PreviewMouseDown="button6_PreviewMouseDown" PreviewMouseUp="button6_PreviewMouseUp"></Button>
        

        <Image x:Name="image1" Source="/toilet.png" Height="50" Width="50" Margin="30,33,255,40" Visibility="Hidden" ></Image>
        <Image x:Name="image2" Source="/toilet.png" Height="50" Width="50" Margin="30,33,255,40" Grid.Column="1"  Visibility="Hidden"></Image>
        <Image x:Name="image3" Source="/toilet.png" Height="50" Width="50" Margin="30,33,255,40" Grid.Column="0" Grid.Row="1"  Visibility="Hidden"></Image>
        <Image x:Name="image4" Source="/toilet.png" Height="50" Width="50" Margin="30,33,255,40" Grid.Column="1" Grid.Row="1"  Visibility="Hidden"></Image>
        <Image x:Name="image5" Source="/toilet.png" Height="50" Width="50" Margin="30,33,255,40" Grid.Column="0" Grid.Row="2"  Visibility="Hidden"></Image>
        <Image x:Name="image6" Source="/toilet.png" Height="50" Width="50" Margin="30,33,255,40" Grid.Column="1" Grid.Row="2"  Visibility="Hidden"></Image>

        <Image x:Name="image7" Source="/17922_color.png"  Height="55" Width="55"  Margin="255,30,45,41" Visibility="Hidden"></Image>
        <Image x:Name="image8" Source="/17922_color.png"  Height="55" Width="55"  Margin="255,30,45,41" Grid.Column="1" Visibility="Hidden"></Image>
        <Image x:Name="image9" Source="/17922_color.png"  Height="55" Width="55"  Margin="255,30,45,41" Grid.Column="0" Grid.Row="1"  Visibility="Hidden"></Image>
        <Image x:Name="image10" Source="/17922_color.png"  Height="55" Width="55"  Margin="255,30,45,41" Grid.Column="1" Grid.Row="1" Visibility="Hidden"></Image>
        <Image x:Name="image11" Source="/17922_color.png"  Height="55" Width="55"  Margin="255,30,45,41" Grid.Column="0" Grid.Row="2" Visibility="Hidden"></Image>
        <Image x:Name="image12" Source="/17922_color.png"  Height="55" Width="55"  Margin="255,30,45,41" Grid.Column="1" Grid.Row="2" Visibility="Hidden"></Image>
    </Grid>
</Window>
