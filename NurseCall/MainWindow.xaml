<Window x:Class="NurseCall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NurseCall"
        mc:Ignorable="d"
        Title="ナースコール" Height="430" Width="600" Background="AliceBlue" Closing="Window_Closing"  Loaded="Window_Loaded">
    <Grid IsEnabled="{Binding ConnectionAvaliable}">
        <Canvas x:Name="canvas1"  Height="430" Width="600" Background="AliceBlue">
            <Label x:Name="label1" Content="101-1号室&#x0a;佐田侑衣菜" FontSize="30"></Label>
            <Button x:Name="button1" Content="緊急" FontSize="60" Height="130" Width="210" Canvas.Left="195" Canvas.Top="50" Background="#CD5C5C"  Click="button1_Click"></Button>
            <Button x:Name="button2" Content="その他" FontSize="40" Height="90" Width="150" Canvas.Left="60" Canvas.Top="290"  Background="#E9967A" Click="button2_Click"></Button>
            <Button x:Name="button3" Content="トイレ" FontSize="40" Height="90" Width="150"  Canvas.Left="390" Canvas.Top="290"  Background="#6495ed" Click="button3_Click"></Button>
            <Image x:Name="image1" Source="/e1120_2.png"  Height="50" Width="250" Canvas.Left="5" Canvas.Top="250"></Image>
            <Label x:Name="label3" Content="質問、介護、点滴交換" FontSize="30" Canvas.Top="220"></Label>
        </Canvas>
    </Grid>
</Window>
