<Window x:Class="NurseCall.NurseCall2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NurseCall"
        mc:Ignorable="d"
        Title="ナースコール その他" Height="430" Width="600" Background="AliceBlue" Loaded="Window_Loaded"  Closing="Window_Closing">
    <Grid>
        <Canvas x:Name="canvas1"  Height="430" Width="600" Background="AliceBlue">
            <Button x:Name="button1" Content="戻る" Height="50" Width="60" FontSize="20" Click="button1_Click"></Button>
            <Label x:Name="label1" Content="質問：" FontSize="30" Canvas.Left="70" Canvas.Top="10"></Label>
            <TextBox x:Name="textBox1" Height="30" Width="400" Canvas.Left="170" Canvas.Top="20" ></TextBox>
            <GroupBox x:Name="groupBox1" Header="介助" FontSize="35" Width="170" Height="200" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="70" Canvas.Top="90" >
                <StackPanel Orientation="Vertical" Height="150">
                    <CheckBox x:Name="checkBox1" Content="入浴" HorizontalAlignment="Left"  VerticalAlignment="Top" VerticalContentAlignment="Center"/>
                    <CheckBox x:Name="checkBox2" Content="食事" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
                    <CheckBox x:Name="checkBox3" Content="移動" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
                </StackPanel>
            </GroupBox>
            <GroupBox x:Name="groupBox2" Header="薬剤" FontSize="35" Width="200" Height="200" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="300" Canvas.Top="90" >
                <StackPanel Orientation="Vertical" Height="150">
                    <CheckBox x:Name="checkBox4" Content="点滴交換" HorizontalAlignment="Left"  VerticalAlignment="Top" VerticalContentAlignment="Center"/>
                    <CheckBox x:Name="checkBox5" Content="薬剤の投与" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
                </StackPanel>
            </GroupBox>
            <Label x:Name="label2" Content="精神状態" FontSize="26" Canvas.Left="70" Canvas.Top="300"></Label>
            <Slider x:Name="slider1" Minimum="0" Maximum="100" Value="50" Canvas.Left="92" Canvas.Top="352" Width="350" HorizontalAlignment="Left" VerticalAlignment="Top"></Slider>
            <Image x:Name="image1" Source="/naki.png" Height="50" Width="50" Canvas.Left="40" Canvas.Top="330"></Image>
            <Image x:Name="image2" Source="/niko.png" Height="50" Width="50" Canvas.Left="430" Canvas.Top="330"></Image>
            <Button x:Name="button2" Content="送信" Height="50" Width="80" FontSize="20" Canvas.Left="500" Canvas.Top="320" Click="button2_Click" Background="#F08080"></Button>
        </Canvas>
    </Grid>
</Window>
